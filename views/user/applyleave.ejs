<% include ../partials/header %>

<!--NAVIGATION BAR FOR ADMIN-->
<% include ../partials/userNav %>

<% include ../partials/alerts %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
          <div class="card transparent-container">
            <div class="card-header text-center login-card-header">
                <h4 class="h3-login login-h4">Aply Leave</h4>
                <hr class="hr-login">
              </div>
                <div class="card-block">
                  <form class="p-3" action="/user/1/leave/apply" method="POST">
                      
                    <div class="form-group">
                      <label class="form-control-label">Name</label>
                      <input type="text" name="name" placeholder="Roll Number" class="form-control" required>
                    </div>

                    <div class="form-group">
                      <label class="form-control-label">Roll Number</label>
                      <input type="text" name="roll" placeholder="Roll Number" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Leave Type</label>
                      <input type="text" name="type" placeholder="Sick/Personal/OD" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-control-label">Applying to</label>
                        <input type="text" name="applyingto" placeholder="Name" class="form-control" required>
                      </div>

                    <div class="form-group">
                      <label class="form-control-label">Leave Required from</label>
                      <input type="text" name="leavefrom" placeholder="dd/mm/yyyy" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Leave requied until</label>
                      <input type="text" name="leaveuntil" placeholder="dd/mm/yyyy" class="form-control" required>
                    </div>
                    

                    <div class="form-group">
                      <label class="form-control-label">Leave description</label>
                      <textarea name="description" cols="30" rows="10" class="form-control"></textarea>
                    </div>
                    <button type="submit"class="addc-btn" class="btn btn-warning btn-block">Apply</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="https://cdn.ckeditor.com/4.9.2/standard/ckeditor.js"></script>
<script>
  CKEDITOR.replace('course[description]');
</script>

