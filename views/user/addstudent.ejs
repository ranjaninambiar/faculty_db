<% include ../partials/header %>

<!--NAVIGATION BAR FOR ADMIN-->
<% include ../partials/userNav %>

<% include ../partials/alerts %>

<div class="container my-4">
    <div class="row justify-content-center">
        <div class="col-md-7">
            <div class="card">
              <div class="card-header text-center">
                <h4>Add Student</h4>
              </div>
                <div class="card-block">
    
                  <form class="p-3" action="/students/add/<%=id._id%>/<%=cid._id%>" method="POST">
                      
                    <div class="form-group">
                      <label class="form-control-label">Name</label>
                      <input type="text" name="student[name]" placeholder="Student Name" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Mentor</label>
                      <input type="text" name="student[mentor]" placeholder="Student Mentor" class="form-control" required>
                    </div>
                    
                    <div class="form-group">
                      <label class="form-control-label">Batch</label>
                      <input type="text" name="student[batch]" placeholder="Batch of entry" class="form-control" required>
                    </div>
                    
                    <button type="submit" class="btn btn-warning btn-block">Enroll student</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
</div>



